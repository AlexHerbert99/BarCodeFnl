@model IEnumerable<barCode.Models.Boleta>
@{
    ViewBag.Title = "Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="color:white">Compras</h2>

<table class="table table-hover table-bordered" style="background-color:white">
    <tr>
        <th>N° Venta</th>
        <th>Fecha Venta</th>
        <th>Total Venta</th>
        <th></th>
        <th></th>
    </tr>

    @{
        double total = 0;
    }
    @foreach (var item in Model)
    {
        total += (double)item.Total;
        <tr>
            <td>@item.IdBoleta</td>
            <td>@item.Fecha</td>
            <td>@String.Format("{0:C}", item.Total)</td>
            <td align="center">@Html.ActionLink("Detalle", "DetalleVenta", new { id = item.IdBoleta }, new  { @class="btn btn-sm btn-info" }) </td>
            <td align="center">@Html.ActionLink("Anular", "anularCompra","BancoFalso", new { id = item.IdBoleta }, new { @class = "btn btn-sm btn-danger" })</td>
        </tr>
    }
    <tfoot>
        <tr>
            <th colspan="2">Total</th>
            <th colspan="3">@String.Format("{0:C}", total)</th>
        </tr>
    </tfoot>
</table>


